<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="1.6.0" method="upgrade">
	<name>vmeeplus</name>
	<creationDate>2014-09-18</creationDate>
	<author>Interamind</author>
	<authorEmail>info@interamind.com</authorEmail>
	<authorUrl>http://www.interamind.com</authorUrl>
	<copyright>Copyright 2014 Interamind Ltd</copyright>
	<license>Commercial</license>
	<version>1.1.6</version>
	<description>VM Emails Manager Plus</description>

	<scriptfile>script.php</scriptfile>
	
	<!-- Install Database Section -->
	<install folder="admin/com_vmeeplus">
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>

	<files folder="site">
        <filename>vmeeplus.php</filename>
    </files>
	<administration>
		<menu img="components/com_vmeeplus/images/plus_logo_16x16.png">INTERAMIND_VMEM_PLUS</menu>
		<submenu>
				<menu img="components/com_vmeeplus/images/template_16x16.jpg" controller="templateList">EMAIL_TEMPLATES</menu>
				<menu img="components/com_vmeeplus/images/rule_16x16.jpg" controller="ruleList">RULE_LIST</menu>
		</submenu> 	
		<files folder="admin/com_vmeeplus">
			<filename>vmeeplus.php</filename>
			<filename>helper.php</filename>
			<filename>index.html</filename>
			<filename>vmeepro.cfg.php</filename>
			<filename>config.xml</filename>
			<folder>classes</folder>
			<folder>helpers</folder>
			<folder>fields</folder>
			<folder>images</folder>
			<folder>js</folder>
			<folder>models</folder>
			<folder>controllers</folder>
			<folder>sql</folder>
			<folder>views</folder>
			<folder>tables</folder>
			<folder>install</folder>
			<folder>uninstall</folder>
		</files>
		<languages folder="admin/languages">
			<language tag="en-GB">en-GB.com_vmeeplus.ini</language>
			<language tag="en-GB">en-GB.com_vmeeplus.sys.ini</language>
			<language tag="ru-RU">ru-RU.com_vmeeplus.ini</language>
			<language tag="ru-RU">ru-RU.com_vmeeplus.sys.ini</language>
		</languages>
	</administration>
	<plugins>
	    <plugin name="sendmail" group="vmeepro" />
	    <plugin name="tagHandlerVmeePro" group="vmee" />
	    <plugin name="conditionalContentInteraMind" group="vmee" />
	    <plugin name="dynamicCouponVMEE" group="vmee" />
	    <plugin name="dynamicCouponVMEEAWO" group="vmee" />
  </plugins>
	
</extension>
