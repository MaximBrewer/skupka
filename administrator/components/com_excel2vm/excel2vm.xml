<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/component-install.dtd">
<extension type="component" version="3.0" method="upgrade">
	<name>Excel2VM</name>
  <author>Kostin Aleksey</author>
  <creationDate>28 January 2012</creationDate>
  <copyright>Kostin Aleksey</copyright>
  <license>http://php-programmist.ru/license/commercial.html</license>
  <authorEmail>php.programmist.ru@gmail.com</authorEmail>
  <authorUrl>http://php-programmist.ru</authorUrl>
	<!--  The version string is recorded in the components table -->
	<version>4.6.4</version>
	<!-- The description is optional and defaults to the name -->
	<description>Компонент предназначен для импорта товаров из Excel в VirtueMart 2 и VirtueMart 3</description>
    <scriptfile>script.php</scriptfile> 
    <!-- Site Main File Copy Section -->
    <install>
      <sql>
         <file charset="utf8" driver="mysql">install.sql</file>
      </sql>
   </install>
   <uninstall>
      <sql>
         <file charset="utf8" driver="mysql">uninstall.sql</file>
      </sql>
   </uninstall>
    <files folder="site">
        <filename>excel2vm.php</filename>
    </files>
    <administration>
        <!-- Administration Menu Section -->
        <menu>IMPORTVM</menu>
        <submenu>
				<menu view="excel2vm">IMPORT</menu>
			    <menu view="export">EXPORT</menu>
			    <menu view="yml">YML</menu>
			    <menu view="config">CONFIGURATIONS</menu>
			    <menu view="backup">RECOVER</menu>
			    <menu view="support">SUPPORT</menu>

		</submenu>

        <files folder="admin">
    <!-- Site Main File Copy Section -->
            <filename>index.html</filename>
            <filename>access.xml</filename>
            <filename>config.xml</filename>
			<filename>install.sql</filename>
			<filename>uninstall.sql</filename>
            <filename>excel2vm.php</filename>
            <filename>controller.php</filename>
            <folder>views</folder>
            <folder>js</folder>
            <folder>libraries</folder>
            <folder>backup</folder>
            <folder>export</folder>
            <folder>xls</folder>
            <folder>models</folder>
			<folder>assets</folder>
			<folder>config</folder>
        </files>

		<languages folder="admin">
			<language tag="ru-RU">language/ru-RU/ru-RU.com_excel2vm.sys.ini</language>
			<language tag="ru-RU">language/ru-RU/ru-RU.com_excel2vm.ini</language>
            <language tag="uk-UA">language/uk-UA/uk-UA.com_excel2vm.sys.ini</language>
			<language tag="uk-UA">language/uk-UA/uk-UA.com_excel2vm.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.com_excel2vm.sys.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.com_excel2vm.ini</language>
		</languages>
    </administration>
</extension>