	<name>VmSorting</name>
	<author>Vladimir Pronin</author>
	<creationDate>14.12.2016</creationDate>
	<copyright>(C) 2016 virtuemart.su Все права защищены.</copyright>
	<license>GNU/GPLv3</license>
	<authorEmail>myweb11@mail.ru</authorEmail>
	<authorUrl>virtuemart.su</authorUrl>
	<version>1.1</version>
	<description>PLG_VM_SYSTEM_SORTING_DESC</description>
	<files>
		<filename plugin="vmsorting">vmsorting.php</filename>
		<filename>index.html</filename>
		<folder>media</folder>
		<folder>language</folder>
	</files>
	<languages folder="language">
		<language tag="ru-RU">ru-RU/ru-RU.plg_system_vmsorting.sys.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.plg_system_vmsorting.ini</language>
	</languages>
	<config>
    <fields name="params">
        <fieldset name="basic">
           <field
                name="view_sorting"
                type="radio"
                class="btn-group btn-group-yesno"
                default="1"
                label="PLG_VM_SYSTEM_SORTING_VIEW">
                <option value="1">Select</option>
                <option value="2">Block</option>
            </field>
            <field
                name="bootstrap"
                type="radio"
                class="btn-group btn-group-yesno"
                default="0"
                label="PLG_VM_SYSTEM_SORTING_BOOTSTRAP"
                description="PLG_VM_SYSTEM_SORTING_BOOTSTRAP_DESC">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
        </fieldset>
    </fields>
</config>
	
</extension>
