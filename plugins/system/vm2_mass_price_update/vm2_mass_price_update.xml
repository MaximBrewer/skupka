<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
    <name>Virtuemart2 mass price and stock updater</name>
    <creationDate>12.11.2014</creationDate>
    <author>Beagler</author>
    <copyright>Copyright 2014 Beagler.ru All rights reserved!</copyright>
    <authorEmail>beagler@beagler.ru</authorEmail>
    <authorUrl>http://beagler.ru</authorUrl>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <version>3.0</version>
    <description>Virtuemart2 mass price  and stock updater - plugin to mass price and stock in product list ver. 3.0</description>
    <scriptfile>script.php</scriptfile>
    <files>
        <filename plugin="vm2_mass_price_update">vm2_mass_price_update.php</filename>
        <filename>index.html</filename>
		
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="round" type="text"
                               default="0"
                               description="Введите количество знаков после запятой. До целого - 0."
                               label="Округление цен"
                               size="2"
                />
                <field name="custom_field" type="list" default="0" label="Менять цены в настраиваемых полях" description="Менять цены в настраиваемых полях">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>	
				
            </fieldset>
        </fields>
    </config>
</extension>