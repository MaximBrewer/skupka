<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
    <name>Maskedinput Jquery Plugin</name>
    <creationDate>06.12.2014</creationDate>
    <author>Beagler</author>
    <copyright>Copyright 2014 Beagler.ru All rights reserved!</copyright>
    <authorEmail>beagler@beagler.ru</authorEmail>
    <authorUrl>http://beagler.ru</authorUrl>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <version>1.0</version>
    <description>PLG_MASKEDINPUT_XML_DESCRIPTION</description>
    <scriptfile>script.php</scriptfile>
    <files>
        <filename plugin="maskedinput">maskedinput.php</filename>
        <filename>index.html</filename>
        <folder>assets</folder>
    </files>
    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.plg_system_maskedinput.sys.ini</language>
        <language tag="ru-RU">ru-RU/ru-RU.plg_system_maskedinput.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="mask" type="text"
                               default="+7 999 999 99 99"
                               description="PLG_MASKEDINPUT_FIELD_MASKEDINPUT_DESC"
                               label="PLG_MASKEDINPUT_FIELD_MASKEDINPUT_LABEL"
                               size="20"
                />	
				
            </fieldset>
        </fields>
    </config>
</extension>