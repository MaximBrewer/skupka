<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
	<name>VM Quick View</name>
	<author>Vladimir Pronin</author>
	<creationDate>12.03.2018</creationDate>
	<copyright>(C) 2017 virtuemart.su Все права защищены.</copyright>
	<license>GNU/GPLv3</license>
	<authorEmail>admin@virtuemart.su</authorEmail>
	<authorUrl>virtuemart.su</authorUrl>
	<version>1.0</version>
	<description>PLG_SYSTEM_VMQUICKVIEW_DESCRIPTION</description>
	<files>
		<filename plugin="vmquickview">vmquickview.php</filename>
		<filename>index.html</filename>
		<folder>language</folder>
		<folder>assets</folder>
		<folder>tmpl</folder>
	</files>
	<languages folder="language">
		<language tag="ru-RU">ru-RU/ru-RU.plg_system_vmquickview.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.plg_system_vmquickview.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
			    <field name="type" type="radio" default="1" label="PLG_SYSTEM_VMQUICKVIEW_TYPE" description="PLG_SYSTEM_VMQUICKVIEW_TYPE_DESC" class="btn-group btn-group-yesno">
                    <option value="1">PLG_SYSTEM_VMQUICKVIEW_TYPE1</option>
                    <option value="2">PLG_SYSTEM_VMQUICKVIEW_TYPE2</option>
                </field>
                
                <field type="spacer" name="myspacer1" label="PLG_SYSTEM_VMQUICKVIEW_BUTTON" />
                
                <field name="class" type="text" default="" label="PLG_SYSTEM_VMQUICKVIEW_CLASS" description="PLG_SYSTEM_VMQUICKVIEW_CLASS_DESC" />
                <field name="xs" type="radio" default="1" label="PLG_SYSTEM_VMQUICKVIEW_BUTTON_XS" description="PLG_SYSTEM_VMQUICKVIEW_BUTTON_XS_DESC" class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                <field type="spacer" name="myspacer2" label="PLG_SYSTEM_VMQUICKVIEW_MODAL" />
                
                <field name="modalWidth" type="number" default="600" label="PLG_SYSTEM_VMQUICKVIEW_MODAL_WIDTH" description="PLG_SYSTEM_VMQUICKVIEW_MODAL_WIDTH_DESC" />
                <field name="modalColor" type="color" default="#6d7d8d" label="PLG_SYSTEM_VMQUICKVIEW_MODAL_COLOR" description="PLG_SYSTEM_VMQUICKVIEW_MODAL_COLOR_DESC" />
                <field name="fullscreen" type="radio" default="1" label="PLG_SYSTEM_VMQUICKVIEW_FULLSCREEN" description="PLG_SYSTEM_VMQUICKVIEW_FULLSCREEN_DESC" class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                
                <field showon="type:1" type="spacer" name="myspacer3" label="PLG_SYSTEM_VMQUICKVIEW_TEMPLATE" />
                
                <field showon="type:1" name="img" type="radio" default="1" label="PLG_SYSTEM_VMQUICKVIEW_IMG" description="PLG_SYSTEM_VMQUICKVIEW_IMG_DESC" class="btn-group btn-group-yesno">
                    <option value="1">PLG_SYSTEM_VMQUICKVIEW_IMG1</option>
                    <option value="2">PLG_SYSTEM_VMQUICKVIEW_IMG2</option>
                </field>
                <field showon="type:1" name="maxImg" type="number" default="300" label="PLG_SYSTEM_VMQUICKVIEW_MAXIMG" description="PLG_SYSTEM_VMQUICKVIEW_MAXIMG_DESC" />
                <field showon="type:1" name="price" type="radio" default="1" label="PLG_SYSTEM_VMQUICKVIEW_PRICE" description="PLG_SYSTEM_VMQUICKVIEW_PRICE_DESC" class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field showon="type:1" name="sku" type="radio" default="1" label="PLG_SYSTEM_VMQUICKVIEW_SKU" description="PLG_SYSTEM_VMQUICKVIEW_SKU_DESC" class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field showon="type:1" name="mf" type="radio" default="1" label="PLG_SYSTEM_VMQUICKVIEW_MF" description="PLG_SYSTEM_VMQUICKVIEW_MF_DESC" class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field showon="type:1" name="stock" type="radio" default="1" label="PLG_SYSTEM_VMQUICKVIEW_STOCK" description="PLG_SYSTEM_VMQUICKVIEW_STOCK_DESC" class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field showon="type:1" name="cart" type="radio" default="1" label="PLG_SYSTEM_VMQUICKVIEW_CART" description="PLG_SYSTEM_VMQUICKVIEW_CART_DESC" class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field showon="type:1" name="field" type="radio" default="1" label="PLG_SYSTEM_VMQUICKVIEW_FIELD" description="PLG_SYSTEM_VMQUICKVIEW_FIELD_DESC" class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field showon="type:1" name="desc" type="radio" default="1" label="PLG_SYSTEM_VMQUICKVIEW_DESC" description="PLG_SYSTEM_VMQUICKVIEW_DESC_DESC" class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field showon="type:1" name="sdesc" type="radio" default="1" label="PLG_SYSTEM_VMQUICKVIEW_SDESC" description="PLG_SYSTEM_VMQUICKVIEW_SDESC_DESC" class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                
                <field showon="type:1" name="css" type="textarea" default="" label="PLG_SYSTEM_VMQUICKVIEW_CSS" description="PLG_SYSTEM_VMQUICKVIEW_CSS_DESC" rows="10" cols="5" />
                <field showon="type:1" name="js" type="textarea" default="" label="PLG_SYSTEM_VMQUICKVIEW_JS" description="PLG_SYSTEM_VMQUICKVIEW_JS_DESC" rows="10" cols="5" />
                <field showon="type:1" name="addjs" type="textarea" default="" label="PLG_SYSTEM_VMQUICKVIEW_ADDJS" description="PLG_SYSTEM_VMQUICKVIEW_ADDJS_DESC" rows="10" cols="5" />      
			</fieldset>
		</fields>
	</config>
</extension>
